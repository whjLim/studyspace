<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="injectSimpleConfig" class="com.whjlim.springioc.xml.InjectSimpleConfig"/>

    <bean id="injectSimpleSpel" class="com.whjlim.springioc.xml.InjectSimpleSpel"
          p:name="#{injectSimpleConfig.name}"
          p:age="#{injectSimpleConfig.age + 1}"
          p:hight="#{injectSimpleConfig.hight}"
          p:programmer="#{injectSimpleConfig.programmer}"
          p:ageInSeconds="#{injectSimpleConfig.ageInSeconds}"/>

</beans>